<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_medium_2"
    android:paddingBottom="@dimen/margin_medium_2">

    <ImageView
        android:id="@+id/iv_item_list"
        android:layout_width="@dimen/item_list_width"
        android:layout_height="wrap_content"
        android:src="@drawable/shoe"
        android:layout_centerHorizontal="true"
        android:background="@color/primaryColor"
        />

    <Button
        android:id="@+id/btn_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW"
        android:background="@color/primaryColor"
        android:layout_marginTop="@dimen/margin_card_medium_2"
        android:layout_marginLeft="@dimen/new_btn_position"
        />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_item_list"
        android:layout_marginTop="@dimen/margin_card_medium_2"
        android:text="POINTED FLAT MULES"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/item_name_text_size"
        />
</RelativeLayout>